<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="300dp"
    android:layout_height="200dp"
    android:background="@drawable/card_front_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_front_card"
        android:text="Card No.:"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30dp"
        android:textSize="18sp" />

    <android.support.v7.widget.AppCompatEditText
        android:layout_width="300sp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/text_front_card"
        android:inputType="phone"
        android:hint="xxxx-xxxx-xxxx-xxxx"
        android:maxEms="19"
        android:maxLength="19"
        android:id="@+id/edit_card_no" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_front_exp"
        android:layout_below="@id/edit_card_no"
        android:text="Exp. Date"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:textSize="18sp" />

    <android.support.v7.widget.AppCompatEditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/text_front_exp"
        android:inputType="phone"
        android:hint="xx/xx"
        android:maxLength="5"
        android:maxEms="6"
        android:id="@+id/edit_exp_date" />


</RelativeLayout>