<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_background">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_relLayout1"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_header"
            android:text="Create Your Account"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_relLayout2"
        android:layout_below="@id/register_relLayout1"
        android:layout_centerHorizontal="true">

        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/register_cardView_displayName"
            android:layout_centerHorizontal="true"
            android:elevation="15dp"
            app:cardElevation="15dp"
            app:cardMaxElevation="20dp"
            app:cardCornerRadius="35dp"
            app:cardBackgroundColor="@color/transparent_gradient">

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/register_icon_fullname"
                android:layout_marginStart="5dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_user" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="35dp"
                android:paddingEnd="10dp">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/register_editText_displayName"
                    android:inputType="textNoSuggestions"
                    android:hint="Full Name" />

            </android.support.design.widget.TextInputLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/register_cardView_username"
            android:layout_below="@id/register_cardView_displayName"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:elevation="15dp"
            app:cardElevation="15dp"
            app:cardMaxElevation="20dp"
            app:cardCornerRadius="35dp"
            app:cardBackgroundColor="@color/transparent_gradient">

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/register_icon_user"
                android:layout_marginStart="5dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_user" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="35dp"
                android:paddingEnd="10dp">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/register_editText_username"
                    android:inputType="textNoSuggestions"
                    android:hint="Username" />

            </android.support.design.widget.TextInputLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/register_cardView_email"
            android:layout_below="@id/register_cardView_username"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:elevation="15dp"
            app:cardElevation="15dp"
            app:cardMaxElevation="20dp"
            app:cardCornerRadius="35dp"
            app:cardBackgroundColor="@color/transparent_gradient">

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/register_icon_email"
                android:layout_marginStart="5dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_email" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="35dp"
                android:paddingEnd="10dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/register_editText_email"
                    android:inputType="textEmailAddress|textNoSuggestions"
                    android:hint="Email"/>

            </android.support.design.widget.TextInputLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/register_cardView_password"
            android:layout_below="@id/register_cardView_email"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:elevation="15dp"
            app:cardElevation="15dp"
            app:cardMaxElevation="20dp"
            app:cardCornerRadius="35dp"
            app:cardBackgroundColor="@color/transparent_gradient">

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/register_icon_password"
                android:layout_marginStart="5dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_lock" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="35dp"
                android:paddingEnd="10dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/register_editText_password"
                    android:inputType="textPassword|textNoSuggestions"
                    android:hint="Password"/>

            </android.support.design.widget.TextInputLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.AppCompatImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/register_imgButton"
            android:layout_below="@id/register_cardView_password"
            android:src="@drawable/ic_next"
            android:background="@drawable/login_buttom_background"
            android:elevation="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_progressbar"
            android:layout_below="@id/register_imgButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"/>


    </RelativeLayout>

</RelativeLayout>